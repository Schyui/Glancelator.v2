<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Glancelator.v1.ScreenshotScreen"
             Title="ScreenshotScreen">

    <ContentPage.Resources>
        <Color x:Key="PrimaryBackground">#1E1E1E</Color>
        <Color x:Key="MainTextColor">White</Color>
        <Color x:Key="BottomBarColor">#B2B2B2</Color>
        <Color x:Key="BottomBarTextColor">#418B41</Color>
        <Color x:Key="PrimaryGreen">#4CAF50</Color>
        <Color x:Key="DarkGreenButton">#021F02</Color>
    </ContentPage.Resources>


    <Grid RowDefinitions="*, Auto">
       
        <Grid Grid.Row="0"
          RowDefinitions="*, Auto"
          ColumnDefinitions="*">

            <Grid Grid.Row="0"
              Margin="30,10,20,0" 
              ColumnDefinitions="3*, 1*" 
              HorizontalOptions="FillAndExpand"
              VerticalOptions="FillAndExpand">

                <WebView x:Name="MyWebView"
                     Grid.Column="0"
                     Source="https://www.google.com"
                     VerticalOptions="FillAndExpand"
                     HorizontalOptions="FillAndExpand"
                     Margin="0,0,10,0"
                     />
               


                <!-- RIGHT SIDE: SCROLLABLE PANEL -->
                <ScrollView Grid.Column="1"
                            Margin="20,0,0,0"
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">

                    <Grid RowDefinitions="Auto, *, Auto, *, Auto, Auto, Auto, Auto"  
                          VerticalOptions="Fill"
                          HorizontalOptions="FillAndExpand"
                          Padding="0"
                          >

                        <Label Grid.Row="0" 
                               Text="Original / Input Text" 
                               FontAttributes="Bold" 
                               TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"/>

                        <Border x:Name="OriginalTextBorder"
                                Grid.Row="1"
                                Stroke="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"
                                StrokeThickness="1"
                                Padding="5"
                                StrokeShape="RoundRectangle 4"
                                BackgroundColor="White"
                                VerticalOptions="Fill"
                                HorizontalOptions="FillAndExpand"
                                Margin="0,5,0,5">

                            <!-- Dual-purpose editor -->
                            <Editor x:Name="OriginalTextLabel"
                                    Placeholder="Type or paste text here..."
                                    AutoSize="TextChanges"
                                    TextColor="Black"
                                    BackgroundColor="Transparent"
                                    Keyboard="Text"
                                    VerticalOptions="FillAndExpand"
                                    HeightRequest="150"
                                    HorizontalOptions="FillAndExpand"
                                    TextChanged="OnOriginalTextChanged"/>
                        </Border>

                       

                        
                        <!-- Translated Text -->
                        <Label Grid.Row="2"
                               Text="Translated Text"
                               FontAttributes="Bold"
                               TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"/>

                        <Border x:Name="TranslatedTextBorder"
                                Grid.Row="3"
                                Stroke="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"
                                StrokeThickness="1"
                                Padding="5"
                                StrokeShape="RoundRectangle 4"
                                BackgroundColor="White"
                                VerticalOptions="Fill"
                                HorizontalOptions="FillAndExpand"
                                Margin="0,5,0,5">

                            <Editor x:Name="TranslatedTextLabel"
                                    IsReadOnly="True"
                                    AutoSize="TextChanges"
                                    TextColor="Black"
                                    BackgroundColor="Transparent"
                                    Keyboard="Text"
                                    VerticalOptions="FillAndExpand"
                                    HeightRequest="150"
                                    HorizontalOptions="FillAndExpand" />
                        </Border>

                        
                        <HorizontalStackLayout Grid.Row="4"
                                               Margin="0,10,0,0"
                                               Spacing="10"
                                               VerticalOptions="Center">

                            <Label Text="Translation Mode:"
                                   VerticalOptions="Center"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"/>

                            <Switch x:Name="AutoTranslateSwitch"
                                    Toggled="OnAutoTranslateToggled"
                                    VerticalOptions="Center" />

                            <Label x:Name="AutoTranslateLabel"
                                   Text="Manual"
                                   VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"/>
                        </HorizontalStackLayout>

                        <Button Grid.Row="5"
                                 x:Name="ManualTranslateButton"
                                 Clicked="OnManualTranslateClicked"
                                 Text="Translate Text"
                                 BackgroundColor="{StaticResource PrimaryGreen}"
                                 TextColor="{StaticResource MainTextColor}"
        
                                 CornerRadius="6"
                                 Margin="0,5,0,5"/>

                        <!-- Auto-Scan -->
                        <Grid Grid.Row="6"
                              ColumnDefinitions="2*, 2*"
                              ColumnSpacing="10"
                              VerticalOptions="Start"
                              Margin="0,10,0,0">

                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <Label Text="Auto-Scan Interval:"
                                      TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"/>
                                <Picker x:Name="IntervalPicker"
                                        TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource SecondaryTextColorDark}}"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryColorLight}, Dark={StaticResource MainTextColorDark}}"/>
                            </VerticalStackLayout>

                            <Button x:Name="AutoScanToggleButton"
                                    Grid.Column="1"
                                    Text="Start Auto-Scan"
                                    TextColor="{StaticResource MainTextColor}"
                                    Clicked="OnAutoScanToggleClicked"
                                    VerticalOptions="End"
                                    BackgroundColor="{StaticResource PrimaryGreen}"
                                    CornerRadius="0"/>
                        </Grid>

                        <!-- Language Selection -->
                        <Grid Grid.Row="7"
                              ColumnDefinitions="*, *, 2*"
                              ColumnSpacing="10"
                              VerticalOptions="Start">

                            <VerticalStackLayout Grid.Column="0" Spacing="5">
                                <Label Text="From:"
                                       TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"
                                       FontAttributes="Bold"/>
                                <Picker x:Name="FromLanguagePicker"
                                        TextColor="DarkBlue"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryColorLight}, Dark={StaticResource MainTextColorDark}}"
                                        FontSize="13"/>
                            </VerticalStackLayout>

                            <VerticalStackLayout Grid.Column="1" Spacing="5">
                                <Label Text="To:"
                                       TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"
                                       FontAttributes="Bold"/>
                                <Picker x:Name="ToLanguagePicker"
                                        TextColor="DarkGreen"
                                        BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryColorLight}, Dark={StaticResource MainTextColorDark}}"
                                        FontSize="13"/>
                            </VerticalStackLayout>

                            <Button x:Name="ManualScanButton"
                                    Grid.Column="2"
                                    Text="Scan Manually"
                                    BackgroundColor="{StaticResource PrimaryGreen}"
                                    TextColor="{StaticResource MainTextColor}"
                                    Clicked="OnManualScanClicked"
                                    VerticalOptions="End"
                                    CornerRadius="0"/>
                        </Grid>


                    </Grid>
                </ScrollView>
            </Grid>


        </Grid>

            <Grid Grid.Row="1"
              ColumnDefinitions="*, Auto, *"
              ColumnSpacing="10"
              HorizontalOptions="FillAndExpand"
              VerticalOptions="Start"
              Margin="30,10,30,0">

                <Entry Grid.Column="0"
                   x:Name="UrlEntry"
                   Placeholder="Search Web"
                   PlaceholderColor="LightGray"
                   TextColor="White"
                   BackgroundColor="#3E3E3E"
                   VerticalOptions="Center"
                   HorizontalOptions="Start"
                   HeightRequest="45"
                   WidthRequest="250"
                       />
                <Button Text="Go" 
                    Clicked="OnSearchButtonClicked"
                    WidthRequest="60"
                    TextColor="{StaticResource MainTextColor}"
                    BackgroundColor="{StaticResource PrimaryGreen}"
                    CornerRadius="0"/>

                <Button x:Name="FileUpload"
                    Grid.Column="1"
                    Text="Upload File"
                    TextColor="{StaticResource MainTextColor}"
                    BackgroundColor="IndianRed"
                    Clicked="upload_File"
                    CornerRadius="0"
                    WidthRequest="150" 
                    HorizontalOptions="Center"
                    />

                <BoxView Grid.Column="2" Color="Transparent" />
            </Grid>
      
       
    </Grid>

</ContentPage>