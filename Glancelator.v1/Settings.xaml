<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Glancelator.v1.Settings"
             Title="Settings"
             BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryBackgroundLight}, Dark={StaticResource PrimaryBackgroundDark}}">

    <Grid RowDefinitions="*, Auto">

        <ScrollView Grid.Row="0" Padding="10">
            <VerticalStackLayout Spacing="20">

                <Label Text="Language"
                       TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryGreenLight}, Dark={StaticResource PrimaryGreenDark}}"
                       Padding="5, 10"
                       VerticalOptions="Start"/>


                <Grid ColumnDefinitions="Auto, *"
                      BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryColorLight}, Dark={StaticResource SecondaryColorDark}}"
                      Padding="10"
                      Margin="300, 0, 300, 0">

                    <Label Text="Dark Mode"
                           Grid.Column="0"
                           VerticalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}" />

                    <Switch x:Name="DarkModeSwitch"
                            Toggled="DarkModeSwitch_Toggled"
                            Grid.Column="1"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                </Grid>

                <Grid ColumnDefinitions="Auto, *"
                      BackgroundColor="{AppThemeBinding Light={StaticResource SecondaryColorLight}, Dark={StaticResource SecondaryColorDark}}"
                      Padding="10"
                      Margin="300, 0, 300, 0">

                    <Label Text="Show Original Text"
                           Grid.Column="0"
                           VerticalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}" />

                    <Switch x:Name="ShowOriginalTextSwitch"
                            Grid.Column="1"
                            HorizontalOptions="End"
                            VerticalOptions="Center" />
                </Grid>

                <Label Text="About"
                       TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryGreenLight}, Dark={StaticResource PrimaryGreenDark}}"
                       Padding="5, 10"
                       Margin="0,20,0,0"/>

                <Label Text="GlanceLator is an application developed with passion by the collective minds of STI students. This application was designed for comfort and efficiency, ensuring the swift and accurate translation of texts without the need for unnecessary user-inputs."
                       TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"
                       FontSize="18"  HorizontalTextAlignment="Center"
                       Padding="10"
                       LineBreakMode="WordWrap"/>

                <Label TextColor="{AppThemeBinding Light={StaticResource MainTextColorLight}, Dark={StaticResource MainTextColorDark}}"
                       FontSize="20"
                       FontAttributes="Bold"
                       HorizontalTextAlignment="Center"
                       BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryGreenLight}, Dark={StaticResource PrimaryGreenDark}}"
                       Padding="5, 10"
                       Margin="0,20,0,0"/>

                <Image Source="placeholder_image.png"
                       HeightRequest="80"
                       WidthRequest="80"
                       HorizontalOptions="Center"
                       Margin="0, 10, 0, 0"/>


            </VerticalStackLayout>
        </ScrollView>

        <Grid Grid.Row="1"
              BackgroundColor="{AppThemeBinding Light={StaticResource BottomBarColorLight}, Dark={StaticResource BottomBarColorDark}}"
              Padding="10, 5"
              VerticalOptions="End"
              ColumnDefinitions="*, 1.5*, *">   

            <VerticalStackLayout Grid.Column="0"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <ImageButton Source="settings_icon.png"
                     HeightRequest="30"
                     BackgroundColor="Transparent"
                     WidthRequest="30"
                     />
                <Label Text="Settings"
               TextColor= "{AppThemeBinding Light={StaticResource BottomBarTextColorLight}, Dark={StaticResource BottomBarTextColorDark}}" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="1"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <ImageButton Source="screenshot_icon.png"
                     HeightRequest="30"
                     WidthRequest="30"
                     BackgroundColor="Transparent"
                     />
                <Label Text="Screenshot"
               TextColor="{AppThemeBinding Light={StaticResource BottomBarTextColorLight}, Dark={StaticResource BottomBarTextColorDark}}" />
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Column="2"
                         HorizontalOptions="Center"
                         VerticalOptions="Center">
                <ImageButton Source="help_icon.png"
                     HeightRequest="30"
                     WidthRequest="30"
                     BackgroundColor="Transparent"
                     />
                <Label Text="Help"
               TextColor="{AppThemeBinding Light={StaticResource BottomBarTextColorLight}, Dark={StaticResource BottomBarTextColorDark}}" />
            </VerticalStackLayout>
        </Grid>

    </Grid>
</ContentPage>