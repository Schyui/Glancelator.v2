<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Glancelator.v1.App">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <!-- ✅ Your custom app-wide color resources -->
            <Color x:Key="PrimaryBackground">#1E1E1E</Color>
            <Color x:Key="MainTextColor">White</Color>
            <Color x:Key="BottomBarColor">#B2B2B2</Color>
            <Color x:Key="BottomBarTextColor">#418B41</Color>
            <Color x:Key="PrimaryGreen">#418B41</Color>
            <Color x:Key="DarkGreenButton">#021F02</Color>
        </ResourceDictionary>
    </Application.Resources>
