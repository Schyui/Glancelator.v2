<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Glancelator.v1"
             x:Class="Glancelator.v1.MenuTabbedPage"
             BackgroundColor="{StaticResource BottomBarColor}"
             BarTextColor="{StaticResource BottomBarTextColor}"       
             >


    <TabbedPage.Resources>
        <Color x:Key="PrimaryBackground">#1E1E1E</Color>
        <Color x:Key="MainTextColor">White</Color>
        <Color x:Key="BottomBarColor">#B2B2B2</Color>
        <Color x:Key="BottomBarTextColor">#418B41</Color>
        <Color x:Key="PrimaryGreen">#418B41</Color>
        <Color x:Key="DarkGreenButton">#021F02</Color>
    </TabbedPage.Resources>
    <local:HomePage Title="Home" IconImageSource="home_icon.png" />
    <local:ScreenshotScreen Title="Screenshot" IconImageSource="screenshot_icon.png"/>
    <local:Settings Title="Settings" IconImageSource="settings_icon.png" />
    <local:HomePage Title="Help" IconImageSource="help_icon.png" />


</TabbedPage>
